function logInverseGammaOutput = LogInverseGamma(s, alpha, beta, n)

logVal1 = alpha*log(beta);
logVal2 = -(alpha + 1).*log(s);
logVal3 = -beta./s;

if alpha <=1
    logInverseGammaOutput = logVal1 + logVal2 + logVal3 - log(gamma(alpha));
elseif alpha > 1
    
    logInverseGammaOutput = logVal1 + logVal2 + logVal3 - log(gamma(alpha - n)) ...
        - sum(log(1:(alpha -1)));
end

end

